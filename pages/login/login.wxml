<!--pages/login/login.wxml-->
<view class="top_v">
	用户登录
</view>
<view class="login_v">
	<view class="yhm_v">
		<view class="tit_v">用户名</view>
		<view class="inp_v">
      <input type="text" class="yhm_inp" id="yhm_inp" placeholder="请输入用户名" bindinput="getInputValue"/>
    </view>
	</view>
	<view class="mm_v">
		<view class="tit_v">密码</view>
		<view class="inp_v">
      <input type="password" class="mm_inp" id="mm_inp" placeholder="请输入密码" bindinput="getInputValue"/>
    </view>
	</view>
	<view class="login_but_v" catchtap="checkLogin">登录</view>
</view>
